#include <bits/stdc++.h>
#define rep(i, n) for(int i = 0; i < (n); i++)
using namespace std;

long long gcd (int x, int y)
{
	if (y == 0) return x;
	return gcd(y, x % y);
}
 
long long lcm(int x, int y)
{
	return x * y / gcd(x, y);
}

signed main(void)
{
	int n, m;
	long long g, ans;
	string s, t;

	cin >> n >> m >> s >> t;
	ans = lcm(n, m);
	g = gcd(n, m);
	cout << ans << endl;
	for(long long k = 0; k < g; k++)
	{
		if (s[n / g * k] != t[m / g * k])
			ans = -1;
	}
	cout << ans << endl;
	return 0;
}
