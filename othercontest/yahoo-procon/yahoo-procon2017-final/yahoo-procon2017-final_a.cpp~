#include <bits/stdc++.h>
#define rep(i, n) for(int i = 0; i < (n); i++)
using namespace std;

signed main(void)
{
	string s;
	int cnt, tmp, minus;
	bool flag;
	map<char, int> mp;

	cin >> s;
	rep(i, s.size())
	{
		mp[s[i]]++;
	}
	cnt = minus = 0;
	tmp = max(max(max(mp['y'], mp['a']), mp['h']), mp['o'] / 2);
	flag = false;
	for(auto p : mp)
	{
		auto k = p.first;
		auto v = p.second;
		if (k != 'y' && k != 'a' && k != 'h' && k != 'o')
		{
			flag = true;
			minus++;
			cnt++;
		}
		else
		{
			if (k == 'o')
				cnt += tmp * 2 - v;
			else
				cnt += tmp - v;
		}
	}
	if (flag) cnt-=minus;
	cout << cnt << endl;
	return 0;
}
