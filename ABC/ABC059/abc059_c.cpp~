#include <bits/stdc++.h>
#define rep(i, n) for(int i = 0; i < (n); i++)
using namespace std;
typedef long long ll;

int n;
ll f(vector<ll>& sum, vector<ll>& pm)
{
	int tmp;
	tmp = 0;
	rep(i, n - 1)
	{
		sum[i + 1] += pm[i];
		if (sum[i] * sum[i + 1] >= 0)
		{
			if (sum[i + 1] == 0)
			{
				if (sum[i] < 0)
					sum[i + 1] = pm[i + 1] = 1;
				else
					sum[i + 1] = pm[i + 1] = -1;
			}
			else if (sum[i + 1] < 0)
			{
				pm[i + 1] = 1 - sum[i + 1];
				sum[i + 1] = 1;
			}
			else if (sum[i + 1] > 0)
			{
				pm[i + 1] = -1 - sum[i + 1];
				sum[i + 1] = -1;
			}
			tmp += abs(pm[i + 1]);
		}
	}
	return tmp;
}

signed main(void)
{
	cin >> n;
	vector<ll> s(n), t, pm(n, 0);
	ll ans, tmp;
	rep(i, n) 
	{
		int a;
		cin >> a;
		s[i] = a;
	}
	rep(i, n - 1) s[i + 1] += s[i];
	ans = 1e18;

	// ‹ô””Ô–Ú+
	copy(s.begin(), s.end(), back_inserter(t));
	tmp = 0;
	if (t[0] <= 0) 
	{
		pm[0] = 1 - t[0];
		t[0] = 1;
		tmp += abs(pm[0]);
	}
	tmp += f(t, pm);
	ans = min(ans, tmp);

	// ‹ô””Ô–Ú-
	rep(i, n) pm[i] = 0;
	tmp = 0;
	if (s[0] >= 0)
	{
		pm[0] = -1 - s[0];
		s[0] = -1;
		tmp += abs(pm[0]);
	}
	tmp += f(s, pm);
	ans = min(ans, tmp);
	cout << ans << endl;
	return 0;
}
