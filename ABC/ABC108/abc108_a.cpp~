#include <bits/stdc++.h>
#define rep(i, n) for(int i = 0; i < n; i++)
using namespace std;

signed main(void)
{
	int k;
	int odd, even;
	cin >> k;
	if (k % 2 == 0)
	{
		odd = k / 2 + 1;
		even = k - odd;
	}
	else
	{
		even = k / 2;
		odd = k - even;
	}
	cout << even * odd << endl;
	return 0;
}
